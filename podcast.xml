---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:dc="http://purl.org/dc/elements/1.1/" xmlns:sy="http://purl.org/rss/1.0/modules/syndication/" xmlns:admin="http://webns.net/mvcb/" xmlns:atom="http://www.w3.org/2005/Atom/" xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#" xmlns:content="http://purl.org/rss/1.0/modules/content/" xmlns:itunes="http://www.itunes.com/dtds/podcast-1.0.dtd">
  <channel>
    <title>{{ site.title | xml_escape }}</title>
    <link>{{ site.url }}{{ site.baseurl }}/</link>
    <pubDate>{{ site.time | date_to_rfc822 }}</pubDate>
    <description>{{ site.description | xml_escape }}</description>
    <language>en-us</language>

    <itunes:subtitle>{{ site.title | xml_escape }}</itunes:subtitle>
    <itunes:author>{{ site.author | xml_escape }}</itunes:author>
    <itunes:summary>{{ site.description | xml_escape }}</itunes:summary>
    <itunes:image href="{{ site.showart  | xml_escape }}"/>
    {% for cat in post.categories %}
    <itunes:keywords>{{ cat | xml_escape }}</itunes:keywords>
    {% endfor %}
    <itunes:explicit>no</itunes:explicit>
    <itunes:owner>
        <itunes:name>{{ site.author | xml_escape }}</itunes:name>
        <itunes:email>{{ site.email | xml_escape }}</itunes:email>
    </itunes:owner>
    <itunes:category text="Arts">
        <itunes:category text="Design"/>
    </itunes:category>
    <itunes:category text="Technology"/>

    {% for post in site.posts limit:1000 %}
      <item>
        <title>{{ post.title | xml_escape }}</title>
        <link>{{ post.url | prepend: site.baseurl | prepend: site.url }}</link>
        <guid isPermaLink="true">{{ post.url | prepend: site.baseurl | prepend: site.url }}</guid>
        <pubDate>{{ post.date | date_to_rfc822 }}</pubDate>
        <author>{{ site.author | xml_escape }} {{ site.email | xml_escape }}</author>
        <description>{{ post.content | xml_escape }}</description>
        <enclosure url="{{ post.mp3 | xml_escape }}" length="{{ post.size | xml_escape }}" type="audio/mp3"/>    
        {% for cat in post.categories %}
        <category>{{ cat | xml_escape }}</category>
        {% endfor %}
        <itunes:author>{{ site.author | xml_escape }} {{ site.email | xml_escape }}</itunes:author>
        <itunes:subtitle>hy</itunes:subtitle>
        <itunes:summary>{{ post.excerpt  | xml_escape }}</itunes:summary>
        <itunes:duration>{{ post.length | xml_escape  }}</itunes:duration>
        {% for cat in post.categories %}
        <itunes:keywords>{{ cat | xml_escape }}</itunes:keywords>
        {% endfor %}
        <itunes:image href="{{ site.showart  | xml_escape }}" />
        <itunes:explicit>no</itunes:explicit>
      </item>
    {% endfor %}
  </channel>
</rss>